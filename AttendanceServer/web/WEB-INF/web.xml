<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>StaffLogin</servlet-name>
        <servlet-class>action.StaffLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentLogin</servlet-name>
        <servlet-class>action.StudentLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MailUtility</servlet-name>
        <servlet-class>pack.MailUtility</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserLogin</servlet-name>
        <servlet-class>action.UserLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Get_Rec_Teacher</servlet-name>
        <servlet-class>services.Get_Rec_Teacher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetStaff</servlet-name>
        <servlet-class>services.GetStaff</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetStudentAtt</servlet-name>
        <servlet-class>services.GetStudentAtt</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>add_staff</servlet-name>
        <servlet-class>action.add_staff</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Add_Teachers</servlet-name>
        <servlet-class>action.AddTeachers</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StaffLogin</servlet-name>
        <url-pattern>/StaffLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentLogin</servlet-name>
        <url-pattern>/StudentLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MailUtility</servlet-name>
        <url-pattern>/MailUtility</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserLogin</servlet-name>
        <url-pattern>/UserLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Get_Rec_Teacher</servlet-name>
        <url-pattern>/Get_Rec_Teacher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetStaff</servlet-name>
        <url-pattern>/GetStaff</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetStudentAtt</servlet-name>
        <url-pattern>/GetStudentAtt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>add_staff</servlet-name>
        <url-pattern>/add_staff</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Add_Teachers</servlet-name>
        <url-pattern>/Add_Teachers</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
