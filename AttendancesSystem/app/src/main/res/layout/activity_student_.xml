<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/atten"
    tools:context=".Student_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@+id/line1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Portal"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"/>

    </LinearLayout>

  <LinearLayout
      android:id="@+id/line2"
      android:layout_marginTop="140dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/line1"
      android:orientation="horizontal">

      <com.mikhaellopez.circularimageview.CircularImageView
          android:layout_marginLeft="40dp"
          android:layout_width="150dp"
          android:id="@+id/give_att"
          android:layout_height="150dp"
          android:src="@drawable/givettendance"
          />
      <com.mikhaellopez.circularimageview.CircularImageView
          android:layout_width="150dp"
          android:id="@+id/viewAttStu"
          android:layout_height="150dp"
          android:layout_marginLeft="30dp"
          android:src="@drawable/viewattendance"
          />

  </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:orientation="horizontal">

       <TextView
           android:textSize="28dp"
           android:layout_marginLeft="40dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textAlignment="center"
           android:text="Give\nAttendance"/>


        <TextView
            android:textAlignment="center"
            android:textSize="28dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View\nAttendance"/>

    </LinearLayout>

</RelativeLayout>